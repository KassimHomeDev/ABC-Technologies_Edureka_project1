pipeline {
    agent any
    tools {
        maven 'Maven3.8.7'
    }
    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'  // Optional: Disables SSH host key checking
    }
    stages {
        stage('Run ansible playbook first tasks: Copy code, Build & Push Docker Image') {
            steps {
                sshagent(['59d55631-c5db-4816-8faf-4421a62d14b0'], ignoreMissing: true) { // Use the SSH credentials ID here
                    sh '''
                        chmod 644 hosts
                        ansible-playbook -i ./hosts ansible.yml
                    '''
                }
            }
        }
        stage('Run ansible master playbook: Deploy Artifact to Kubernetes') {
            steps {
                sshagent(['59d55631-c5db-4816-8faf-4421a62d14b0'], ignoreMissing: true) { // Use the SSH credentials ID here as well
                    sh '''
                        chmod 644 hosts
                        ansible-playbook -i ./hosts ansible-masster.yml
                    '''
                }
            }
        }
    }
}
