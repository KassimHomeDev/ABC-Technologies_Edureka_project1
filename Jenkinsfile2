pipeline {
    agent any
    tools {
        maven 'Maven3.8.7'
    }
    stages {
       stage('Run ansible playbook first tasks : first play - Copy code & Build  & Push Docker Image') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Run ansible master playbook: second play - Deploy Artifact to Kubernetes') {
            steps {
                sh 'mvn compile'
            }
        }
        
    }
}
