pipeline {
    agent any
    tools {
        maven 'Maven3.8.7'
    }
    stages {
       stage('Run ansible playbook first tasks : first play - Copy code & Build  & Push Docker Image') {
            steps {
                sh '''
                    sudo chmod 644 host
                    ansible-playbook -i ./host --check ansible.yml
                '''
            }
        }
        stage('Run ansible master playbook: second play - Deploy Artifact to Kubernetes') {
            steps {
                sh 'ansible-playbook -i ./host --check ansible-masster.yml'
            }
        }
        
    }
}
